                    <input name="firstname" type="text" data-field="alphanum" placeholder="Your First Name ...">
                  </div>

                  <div class="form-field required-field">
                    <label for="lastname">Last Name: <small>*</small></label>
                    <input name="lastname" type="text" data-field="alphanum" placeholder="Your Last Name ...">
                  </div>

                  <div class="form-field required-field">
                    <label for="email">Email: <small>*</small></label>
                    <input name="email" type="text" data-field="email" placeholder="Your Email ...">
                  </div>

                  <div class="form-field">
                    <label for="phone">Phone Number:</label>
                    <input name="phone" type="text" data-field="phone" placeholder="Your Phone Number ...">
                  </div>

                  <div class="form-field">
                    <label for="subscribe">Subscribe to Newsletter?</label>
                    <input name="subscribe" type="checkbox">
                  </div>
                </div><!--/ .fields -->

                <div class="form-field message-field required-field">
                  <label for="message">Message: <small>*</small></label>

                  <textarea name="message" data-field="any"></textarea>

